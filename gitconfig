## Git config: Marc Hibbins (@marchibbins)

[user]
    name = Marc Hibbins
    email = marchibbins@gmail.com
[core]
    editor = /usr/bin/vim
    excludesfile = ~/.gitignore
[color]
    ui = auto
[color "branch"]
    current = yellow bold
    local = yellow
    remote = green
[color "diff"]
    meta = cyan
    frag = yellow
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    co = checkout
    cm = commit -m
    s = status
    ss = status -s
    df = diff
    br = branch
    lg = log
    last = log -1 HEAD
    ls = log --pretty=format:"%C(yellow)%h%x09%C(reset)%ar%x09%C(green)%an%x09%C(reset)%s"
    hardreset = reset --hard HEAD
    undo = reset --soft HEAD^
